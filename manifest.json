{
  "manifest_version": 3,
  "name": "ChatGPT Stats Overlay (Local)",
  "version": "0.1.0",
  "description": "Shows personal ChatGPT usage stats from local exports and tracks active time locally.",
  "permissions": ["storage"],
  "content_scripts": [
    {
      "matches": [
        "https://chatgpt.com/*",
        "https://chat.openai.com/*"
      ],
      "js": ["utils.js", "content.js"],
      "css": ["styles.css"],
      "run_at": "document_idle"
    }
  ]
}
